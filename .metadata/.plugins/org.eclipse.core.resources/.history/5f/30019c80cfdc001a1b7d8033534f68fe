
package extraCredit;
import java.util.Scanner;


public class MaxValue_Occurence {

	public static void main (String[] args)

	{

	Scanner input = new Scanner(System.in);

	System.out.println("Enter numbers(q to end input): ");

	//initialize num1 and max to be the first int read

	//and the count is 1 at that point.

	int num1, max = input.nextInt();

	int count = 1;



	while(input.hasNextInt()){

	num1 = input.nextInt();

	if (num1 > max){

	//found a new max. set it to num1 and reset the counter

	max = num1;

	count = 1;

	}

	else if (num1 == max){

	count++;

	}

	}



	// Output largest.

	System.out.println("The largest number is " + max);

	System.out.println("the occurrence count of the largest number is " + count);

	}

	}
	
